<div class="row">
  <h2 class="page-title center-align indigo-text text-accent-2">Review your favorite Marvel Character!</h2>
  <form class="col s6 offset-s3">
    <div class="row">
      <div class="input-field col s6">
        <label for="text">Search:</label>
        <input id="name" name="name" type="search" class="validate">
      </div>
    </div>
    <button id="searchHeroButton" class="btn waves-effect waves-light orange lighten-2" type="submit">Search
      <i class="material-icons right orange lighten-2">search</i>
    </button>
  </form>
  <div id="heroCard">
  </div>
</div>


<div class="row">
  <form class="col s6 offset-s3" id="reviewForm">
    <div class="row">
      <div class="input-field col s6">
        <label for="text">Review Message:</label>
        <input class="validate" id="reviewMessage" name="reviewMessage" type="text"/>
      </div>
    </div>
    <button id="postButton" class="btn waves-effect waves-light orange lighten-2 " type="submit">Submit review
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>


<script src="/js/create-review.js"></script>
<script src="/js/add-hero.js"></script>