<div class="row">
<div class="card col s6 offset-s3 grey lighten-1">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="{{hero.picture}}">
    </div>
    <div class="card-content">
      <span class="card-title activator blue-text text-darken-2">{{hero.name}}<i class="material-icons right">more_vert</i></span>
      <p class="blue-text text-darken-2">Click me!</p>
    </div>
    <div class="card-reveal grey lighten-2">
      <span class="card-title grey-text text-darken-4">Description:<i class="material-icons right">close</i></span>
      <h3>{{hero.name}}</h3>
      <p>{{hero.description}}</p>
    </div>
  </div>
</div>