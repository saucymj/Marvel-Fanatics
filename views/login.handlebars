<div class="row">
    <h2 class="page-title">Login</h2>
    <form class="col s12 login-form">
        <div class="row">
        <div class="input-field col s12 bg-light text-dark">
            <input id="email-login" type="email" class="validate white-text">
            <label for="email">Email:</label>
        </div>
      </div>
        <div class="row">
        <div class="input-field col s12">
          <input id="password-login" type="password" class="validate white-text">
          <label for="password">Password:</label>
        </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
        </button>
    </form>
 </div>


<div class="row">
    <h2 class="page-title">Sign Up</h2>
    <form class="col s12 signup-form">
        <div class="row">
        <div class="input-field col s12">
            <input id="email-signup" type="email" class="validate white-text">
            <label for="email">Email:</label>
        </div>
      </div>
       <div class="row">
        <div class="input-field col s12">
            <input id="username-signup" type="text" class="validate white-text">
            <label for="text">Username:</label>
        </div>
      </div>
        <div class="row">
        <div class="input-field col s12">
          <input id="password-signup" type="password" class="validate white-text">
          <label for="password">Password:</label>
        </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
        </button>
    </form>
 </div>
 <script src="/js/login.js"></script>


    